{
  "name": "the-calorie-police-backend",
  "version": "1.0.0",
  "description": "A simple node.js/express server to fetch Spoonacular's API",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest --passWithNoTests",
    "start": "node dist/index.js",
    "dev": "nodemon src/server.js --ignore tests",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielprrd/The-Calorie-Police-Server.git"
  },
  "author": "Gabrie Afonso",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gabrielprrd/The-Calorie-Police-Server/issues"
  },
  "homepage": "https://github.com/gabrielprrd/The-Calorie-Police-Server#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "cross-env CI=true npm test"
    ]
  },
  "dependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "commitizen": "^4.2.1",
    "commitlint": "^9.1.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.13"
  },
  "devDependencies": {
    "eslint": "^7.7.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
